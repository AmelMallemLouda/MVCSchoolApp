@model School.Models.SchoolModel.SchoolDetails

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>School  Details</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.SchoolName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.SchoolName)
        </dd>

        @*<dt>
            @Html.DisplayNameFor(model => model.SchoolId)
        </dt>*@

        @*<dd>
            @Html.DisplayFor(model => model.SchoolId)
        </dd>*@
        <h3>List of teachers</h3>
        @foreach (var item in Model.Teachers)
        {
            <dt>@Html.DisplayNameFor(modelItem => item.TeacherName)</dt>
            <dd>@Html.DisplayFor(modelItem => item.TeacherName)</dd>
        }

        <h3>List of Classrooms</h3>
        @foreach (var item in Model.ClassRooms)
        {
            <dt>@Html.DisplayNameFor(modelItem => item.ClassRomName)</dt>
            <dd>@Html.DisplayFor(modelItem => item.ClassRomName)</dd>
        }
    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.SchoolId}) 
    @Html.ActionLink("Back to List", "Index")
</p>
